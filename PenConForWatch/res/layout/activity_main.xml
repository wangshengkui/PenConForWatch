    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/parent"
    tools:context=".MainActivity" >
             <TextView
                android:id="@+id/maintextview"
                android:layout_width="match_parent"  
                android:layout_height="240dp"
                android:text="@string/hello_world" 
                android:lineSpacingMultiplier="1.3" />
             <Button
                 android:id="@+id/controlshow"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:text="收起"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pencage123">
          <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pencage_background"
            android:layout_marginTop="250dp"/>
          <Button
              android:id="@+id/hear"
              android:layout_width="60dp"
              android:layout_height="20dp"
              android:layout_marginLeft="50dp"
              android:layout_marginTop="245dp"
              android:padding="0dp"
              android:minHeight="0dp"
              android:minWidth="0dp"
              android:background="@drawable/login_button_selector"
              android:text=""/>
            <Button
              android:id="@+id/end_ask"
              android:layout_width="60dp"
              android:layout_height="20dp"
              android:layout_marginLeft="550dp"
              android:layout_marginTop="245dp"
              android:padding="0dp"
              android:minHeight="0dp"
              android:minWidth="0dp"
              android:background="@drawable/login_button_selector"
              android:text=""/>
            <Button
              android:id="@+id/end_share"
              android:layout_width="60dp"
              android:layout_height="20dp"
              android:layout_marginLeft="665dp"
              android:layout_marginTop="245dp"
              android:padding="0dp"
              android:minHeight="0dp"
              android:minWidth="0dp"
              android:background="@drawable/login_button_selector"
              android:text=""/>
            <Button
              android:id="@+id/san_smartpen"
              android:layout_width="25dp"
              android:layout_height="35dp"
              android:layout_marginLeft="138dp"
              android:layout_marginTop="250dp"
              android:padding="0dp"
              android:minHeight="0dp"
              android:minWidth="0dp"
              android:background="@drawable/login_button_selector"
              android:text=""/>
          <Button
              android:id="@+id/mic"
              android:layout_width="20dp"
              android:layout_height="40dp"
              android:layout_marginLeft="123dp"
              android:layout_marginTop="293dp"
              android:padding="0dp"
              android:minHeight="0dp"
              android:minWidth="0dp"
              android:background="@drawable/login_button_selector"
              android:text=""/>
     </RelativeLayout>
   <ScrollView
    android:layout_width="match_parent"
     android:layout_height="match_parent"
    android:layout_below="@id/pencage123"
    android:background="#ffddddaa">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:id="@+id/pen_chirography"
             android:background="#ff00ffff"
             android:orientation="vertical"/>
    
     </ScrollView>    
  
</RelativeLayout>

        


