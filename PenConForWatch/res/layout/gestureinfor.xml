<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal" >

    <ImageView
        android:id="@+id/show"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:contentDescription="手势图片" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">"

        <TextView
            android:id="@+id/gesture_position"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="手势位置" />

        <TextView
            android:id="@+id/gesture_name"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/gesture_position"
            android:text="手势名称" />
         <TextView
            android:id="@+id/gesture_responce"
            android:layout_toRightOf="@id/gesture_name"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="手势响应方式：默认"/>

        <EditText
            android:id="@+id/gesture_yuyi"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/gesture_position"
            android:textSize="12sp"
            android:text="手势语义" />

        <TextView
            android:id="@+id/gesture_owner"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/gesture_yuyi"
            android:layout_below="@id/gesture_name"
            android:text="手势作者" />
        <TextView
            android:id="@+id/gesture_influence"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/gesture_owner"
            android:layout_below="@id/gesture_responce"
            android:text="作用范围：题干区" />

    </RelativeLayout>

</LinearLayout>